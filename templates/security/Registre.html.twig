{% extends 'base.html.twig' %}

{% block title %}Hello ChambreController!{% endblock %}

{% block body %}
<div class="container">
<h1>Inscription sur le site!</h1>
    {{form_start(form)}}
        {{form_row(form.username,{'label':'Nom d\'utilisateur','attr':{'placeholder':'username','class':'col-md-3'}})}}
        {{form_row(form.eamil,{'label':'Adresse mail','attr':{'placeholder':'email','class':'col-md-3'}})}}
