{% extends 'base.html.twig' %}

{% block title %}Hello ChambreController!{% endblock %}

{% block body %}
<div class="offset-5"> 
<h1>Connexion </h1>
<form action="{{path('security_login')}}" method="post">
    <div class="form-group">
        <input type="text" name="_username" placeholder="mail" class="form-control col-md-5" required>
    </div>
    <div class="form-group">
        <input type="password" name="_password" placeholder="Mot de passe" class="form-control col-md-5" required>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success ">Connexion </button>
    </div>
</form>
</div>
{% endblock %}
