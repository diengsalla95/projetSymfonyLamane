{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Creer chambre{% endblock %}
{% block body %}
<div class="cadre">
    <div class="text-center">
        <h1>Ajout d'une chambre</h1>
        <div>
                {{form_start(form)}}
                <div class="form-group col-md-3 offset-md-5">
                    {{form_row(form.numChambre,{'attr':{'placeholder':'Numero chambre'}})}}
                    {{form_widget(form)}}
                </div>
                <button type="submit" class="btn btn-primary offset-md-1"> Enregistrer</button>
                {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}


